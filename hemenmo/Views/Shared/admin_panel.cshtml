<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/jquery.mobile-1.4.5.css" />
    <link href='https://fonts.googleapis.com/css?family=Lato:400,300' rel='stylesheet' type='text/css' />
    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script type="text/javascript">
    $(document).bind("mobileinit", function () {
        $.mobile.ajaxEnabled = false;
    });
    </script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    @RenderSection("header", required: false)
</head>
<body>
    <div data-role="page" id="pageone">
        <div data-role="panel" id="myPanel">
    <ul data-role="listview">
    <li><a href="/panel" class="ui-btn ui-btn-b"><i class="fa fa-home" style="font-size:24px"></i> Panel Ana Sayfa</a></li>
    <li><a href="/panel/kategori" class="ui-btn"><i class="fa fa-search" style="font-size:24px"></i> Kategoriler</a></li>
    <li><a href="/panel/slider" class="ui-btn"><i class="fa fa-picture-o" style="font-size:24px"></i> Slider</a></li>
    <li><a href="/panel/oyunlar" class="ui-btn"><i class="fa fa-gamepad"></i> Oyunlar</a></li>
    </ul>
</div>
        <div data-role="header">
            <a href="#myPanel" class="ui-nav-icon ui-btn ui-btn-inline ui-corner-all ui-shadow "><i class="fa fa-bars" style="font-size:150%"></i></a>
            <a href="/panel" class="ui-nav-icon ui-btn ui-btn-inline ui-icon-home ui-corner-all ui-shadow "><i class="fa fa-home" style="font-size:150%"></i></a>
            <h1>
                <img src="/images/logo.png" style="width: 100%; max-width: 200px;" />
            </h1></div>
            @RenderBody()

            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
            <div data-role="footer">
                <h1>Hemen Mobil Oyna</h1>
            </div>

        </div>
</body>
</html>
